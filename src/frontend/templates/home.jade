h1 Ranklist

form(ng-submit='filterProfiles()')
  .control-group
    label With tags
    input(tpe='text', ng-model='profileFilters.include', placeholder='Separate with commas')
  .control-group
    label Without tags
    input(tpe='text', ng-model='profileFilters.exclude', placeholder='Separate with commas')
  button(type='submit') Filter


.row
  button.btn.pull-right(ng-click='addProfile()', ng-show='CurrentUser.loggedIn()')
    i.icon-copy
    |  Add Profile

#profiles(ng-grid='profileGridOptions').row

h1 Problem Ranklist

form(ng-submit='filterProblems()')
  .control-group
    label Solved by
    input(type='text', ng-model='filterOptions.include', placeholder='Separate with semicolons')
  .control-group
    label Not solved by
    input(type='text', ng-model='filterOptions.exclude', placeholder='Separate with semicolons')
  button(type='submit') Filter

#problems(ng-grid='problemGridOptions').row
